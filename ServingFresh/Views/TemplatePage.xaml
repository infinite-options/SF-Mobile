                </Grid.ColumnDefinitions>
                <Label Margin="100,15,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Text="Tue, Sep 20" FontSize="26" TextColor="#FFFFFF" FontAttributes="Bold"></Label>
                <StackLayout Grid.Column="1" Margin="0,15,0,0" VerticalOptions="Center" HorizontalOptions="Center">
                    <RelativeLayout
                        RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                        RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}">
                        <Image Source="CartIcon.png" HeightRequest="40"></Image>
                        <Frame Margin="30,0,0,0" HeightRequest="20" MinimumWidthRequest="20" CornerRadius="10" Padding="0" HasShadow="False">
                            <Label Margin="5,1,5,0" Text="0" TextColor="#FF8500" FontSize="14" FontAttributes="Bold"></Label>
                        </Frame>
                    </RelativeLayout>
                </StackLayout>
            </Grid>
            <Grid Grid.Row="1" BackgroundColor="#FFFFFF" ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="filtersColumn" Width="0"></ColumnDefinition>
                    <ColumnDefinition x:Name="deliveryDatesColumn" Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Margin="15,5,0,5" Text="Filters" TextColor="#FFFFFF" FontSize="10"></Label>
                    <Grid Margin="15,5,15,0" Grid.Row="1" ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                            <!--<Image Source="nextIcon.png" HeightRequest="15"></Image>-->
                            <Label Text="^" Rotation="-90" TextColor="#136D74" FontSize="20" FontAttributes="Bold"></Label>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ToScheduleView"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <CollectionView Grid.Column="1" x:Name="filterList" ItemsLayout="HorizontalList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="10">
                                        <Frame Padding="0" HeightRequest="40" WidthRequest="40" HasShadow="False">
                                            <StackLayout Spacing="0">
                                                <Image Source="{Binding iconSource}" HeightRequest="30" HorizontalOptions="Center">
                                                    <Image.Effects>
                                                        <effects:TintImageEffect TintColor="#136D74"></effects:TintImageEffect>
                                                    </Image.Effects>
                                                </Image>
                                                <Label Margin="0,5,0,0" Text="{Binding filterName}" TextColor="#136D74" HorizontalTextAlignment="Center" FontSize="7"></Label>
                                            </StackLayout>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>

                </Grid>
                <Grid Grid.Column="1" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="AUTO"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Margin="15,5,0,0" Text="Delivery dates available" TextColor="#136D74" FontSize="10"></Label>
                    <Grid Margin="15,0,15,0" Grid.Row="1" ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <CollectionView Grid.Column="0" x:Name="scheduleList" ItemsLayout="HorizontalList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="5" >
                                        <Frame Padding="0" HeightRequest="50" WidthRequest="50" HasShadow="False" BackgroundColor="#E0E6E6">
                                            <StackLayout Spacing="0">
                                                <Frame Padding="0" BackgroundColor="#136D74" HasShadow="False" >
                                                    <Label Text="MON" TextColor="#FFFFFF" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                                                </Frame>
                                                <Label Margin="10,0,10,0" Text="Sept 19" TextColor="#136D74" FontSize="12" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                                            </StackLayout>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <StackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                            <!--<Image Source="nextIcon.png" HeightRequest="15"></Image>-->
                            <Label Text="^" Rotation="90" TextColor="#136D74" FontSize="20" FontAttributes="Bold"></Label>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ToFiltersView"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </Grid>
                </Grid>
