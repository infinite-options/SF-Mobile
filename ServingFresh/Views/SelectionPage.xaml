                            <DataTemplate>
                                <ViewCell Height="190">
                                    <Grid HeightRequest="190" ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                <StackLayout Margin="20,0,7,0" Grid.Column="0" Spacing="0" >
